<div class="body-content">
    <h2><%= title_search %></h2>

    <% if (error_message) { %>
        <div class="form-aligned-message">
            <h4><%= error_message %></h4>
        </div>
    <% } %>

    <% if (search_) { %>
        <form id="form" action="" method="post">
            <fieldset class="form-group">
                <label for="room">Room:</label>
                <select id="room" name="room" class="form-control" required>
                    <option selected disabled>--Please select a room--</option>
                    <% room_list.forEach(function(room) { %>
                        <option value="<%= room._id %>"><%= room.name %></option>
                    <% }); %>
                </select>
            </fieldset>

            <div class="btn-submit-layout">
                <button class="btn-search" type="submit">Search</button>
            </div>
        </form>
    <% } %>

    <% if (equipment_list.length) { %>
        <div class="table-wrapper">
            <table class="equipment-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Cost</th>
                    </tr>
                </thead>
                <tbody>
                    <% equipment_list.forEach(function(item) { %>
                        <tr>
                            <td><a href="<%= item.url %>"><%= item.name %></a></td>
                            <td><%= item.type %></td>
                            <td>â‚¬<%= item.cost_formatted %></td>
                        </tr>
                    <% }) %>  
                </tbody>
            </table>
        </div>
    <% } else if (!equipment_list.length && !search_){ %>
        <h3>No equipment found in this room.</h3>
    <% } %>
        
    
</div>